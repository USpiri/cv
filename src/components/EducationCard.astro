---
import type { Education } from "@models/education.interface";

interface Props {
  education: Education;
}

const { education } = Astro.props;
---

<article>
  <div class="flex items-center justify-between">
    <h3 class="text-lg font-semibold leading-none">
      {education.institute}
    </h3>
    <div class="text-sm tabular-nums text-gray-500">{education.date}</div>
  </div>
  <div class="mt-1 text-pretty text-sm">{education.title}</div>
</article>
