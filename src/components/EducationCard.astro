---
import type { Education } from "@models/education.interface";
import Description from "./Description.astro";
import Title from "./Title.astro";

interface Props {
  education: Education;
}

const { education } = Astro.props;
---

<article class="flex flex-col gap-0.5">
  <header class="flex items-center justify-between">
    <Title>{education.institute}</Title>
    <div class="text-sm tabular-nums text-gray-500">{education.date}</div>
  </header>
  <footer>
    <Description>{education.title}</Description>
  </footer>
</article>
