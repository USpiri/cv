---

<section class="flex flex-col gap-5">
  <h2 class="text-xl font-bold">Experience</h2>
  <ul class="flex flex-col gap-5">
    {
      experiences.map((experience) => (
        <li>
          <article class="flex flex-col gap-1">
            <div class="flex items-center justify-between">
              <h3 class="text-lg font-semibold leading-none">
                <a href="/">{experience.company}</a>
                <Badge label={experience.type} size="xs" />
                <span class="rounded-md bg-neutral-500/10 px-1 py-0.5 text-xs font-medium">
                  {experience.type}
                </span>
              </h3>
            </div>
            <p class="text-sm font-medium">{experience.job}</p>
            <p class="text-pretty leading-5 text-neutral-500">
              {experience.description}
            </p>
          </article>
        </li>
      ))
    }
  </ul>
</section>
